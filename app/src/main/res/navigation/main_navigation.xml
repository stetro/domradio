<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/main_navigation" app:startDestination="@id/articleListFragment">

    <fragment android:id="@+id/articleListFragment" android:name="de.domradio.ui.articlelist.ArticleListFragment"
              android:label="@string/app_name" tools:layout="@layout/article_list_fragment">
        <action android:id="@+id/action_articleListFragment_to_articleFragment" app:destination="@+id/articleFragment"
                app:enterAnim="@anim/slide_in_right" app:exitAnim="@anim/slide_out_left"
                app:popEnterAnim="@anim/slide_in_left" app:popExitAnim="@anim/slide_out_right"
                app:launchSingleTop="true"/>
        <action
            android:id="@+id/action_articleListFragment_to_settingsFragment"
            app:destination="@id/settingsFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment android:id="@+id/articleFragment" android:name="de.domradio.ui.article.ArticleFragment"
              android:label="ArticleFragment" tools:layout="@layout/article_fragment">
        <argument android:name="article" app:argType="de.domradio.usecase.data.Article"/>
        <action
            android:id="@+id/action_articleFragment_to_settingsFragment"
            app:destination="@id/settingsFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="de.domradio.ui.settings.SettingsFragment"
        android:label="SettingsFragment" />
</navigation>